<?xml version="1.0" encoding="utf-8"?>
<manifest package="bernardo.bernardinhio.mycompany"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="bernardo.bernardinhio.mycompany.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="bernardo.bernardinhio.mycompany.view.ResultActivity" />

        <activity android:name="bernardo.bernardinhio.mycompany.view.ImageModalActivity"
            android:theme="@style/ImageModalFullScreenTheme"
            android:screenOrientation="sensorLandscape"/>

    </application>

</manifest>